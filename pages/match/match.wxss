/**index.wxss**/

.container {
  background-color: #F2f2f2;
  min-height: 100%;
}
/*游戏盒tab  */

.function {
  white-space: nowrap;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  display: -webkit-inline-flex;
  padding: 20rpx;
  align-items: flex-start;
  align-content: flex-start;
  justify-content: space-between;
}

/*tab  */
.statustab {
  width: 140rpx;
  height: 50rpx;
  border-radius: 25rpx;
  text-align: center;
  border: 0.01em solid #000;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #000;
  margin-top: 40rpx 
}

.tab {
  width: 160rpx;
  height: 60rpx;
  border-radius: 25rpx;
  text-align: center;
  border: 0.01em solid #000;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #000;
  
}

.type-item-on{
  border: 1rpx solid #b97612;
  color: #fff;
  background-color: #b97612
}

.date {
  width: 100%;
  display: -webkit-inline-flex;
}

.righticon {
  width: 15rpx;
  height: 24rpx;
  float: right;
  padding-top: 8rpx;
  padding-right: 5rpx;
}

/*特别推荐属性  */

.title {
  color: #000;
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left: 25%
}
.viewall {
  color: #b97612;
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left:14% 
}
/*自媒体联动小程序属性  */

.title2 {
  line-height: 20rpx;
  text-align: center;
  font-size: 25rpx;
  color: #e1e1e1;
  padding: 50rpx;
  /* background-color: #000; */
}

.matchtitle{
  margin-top: 10rpx; 
  margin-left: 10rpx;
  font-weight: 500;
  font-size: 45rpx;
}

.timetitle{
  line-height: 20rpx;
  font-size: 25rpx;
  color: #bbb5b5;
  padding: 20rpx;
  /* background-color: #000; */
  margin-top: 50rpx; 
}

.matchbody{
  width: 100%;
  margin-top: 30rpx;
  align-items: center;
}
/*今日联动整体属性  */

.tomobody{
  margin-top: 10rpx;
  background-color: #fff
}

.bodytext {
  width: 90%;
  margin-left: 5%;
  background-color: #000;
  margin-top: 40rpx;
  background-image: url('/images/match1.png')
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
}

/* 今日联动属性   */
.vs {
  align-items: center;
}
.title0 {
  color: #fff;
  width: 150rpx;
  font-size: 35rpx;
  display: block;
  text-align: center;
}

.title1 {
  color: #b1abab;
  width: 150rpx;
  font-size: 25rpx;
  display: block;
  text-align: center;
  margin-top: 30rpx;
}
/*第一部分头图属性  */

.leftteamlogo {
  width: 220rpx;
  height: 180rpx;
  overflow: hidden;
